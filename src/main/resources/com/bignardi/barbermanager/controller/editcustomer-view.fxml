<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane minHeight="-Infinity" prefHeight="210.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bignardi.barbermanager.controller.EditCustomerController">
   <content>
      <SplitPane dividerPositions="0.4" minHeight="-Infinity" minWidth="-Infinity" orientation="VERTICAL" prefHeight="200.0" prefWidth="360.0">
         <items>
            <VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="60.0" prefWidth="360.0" spacing="2.0">
               <children>
                  <Label text="Select a customer:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" minWidth="-Infinity" prefHeight="27.0" spacing="10.0">
                     <children>
                        <ChoiceBox fx:id="choiceBox" prefHeight="26.0" prefWidth="170.0" />
                        <Button mnemonicParsing="false" onAction="#removeCustomer" prefHeight="27.0" text="Remove" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" minWidth="-Infinity" prefWidth="360.0">
               <children>
                  <Label text="Edit the selected customer:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" fillHeight="false" spacing="5.0">
                     <children>
                        <VBox alignment="CENTER_LEFT" spacing="2.0">
                           <children>
                              <Label text="Name:">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="nameField" prefHeight="26.0" prefWidth="230.0" />
                           </children>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="2.0">
                           <children>
                              <Label text="Duration:">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="durationField" prefHeight="26.0" prefWidth="53.0" />
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="CANCEL" />
      <ButtonType fx:constant="OK" />
   </buttonTypes>
</DialogPane>
